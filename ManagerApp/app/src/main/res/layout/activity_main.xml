<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/space"
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="8dp">

        <EditText
            android:id="@+id/textIDManager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/descrp_Manager"
            android:ems="10"
            android:hint="ManagerÂ´s id"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textSize="22sp" />



        <Button
            android:id="@+id/add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/btAddDesc"
            android:text="@string/btAdd"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="22sp" />

        <Button
            android:id="@+id/delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/btDeleteDesc"
            android:text="@string/btDelete"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/list_admin"
            android:layout_width="match_parent"
            android:layout_height="359dp"
            android:contentDescription="@string/listOfMan"
            android:text="@string/listOfMan"
            android:textAlignment="center"
            android:textSize="22sp" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>